@model LoginRequest
@{
    ViewData["Header"] = "header--2";
    ViewData["Image-logo"] = "/assets/images/logo-2.png";
    var returnUrl = @Context.Request.Query["ReturnUrl"];
}
<div class="ps-section--hero" style="height: 175px">
</div>
<div class="ps-section pt-80 pb-80">
    <div class="container">
        <div class="ps-section__header text-center mb-50">
            <div class="ps-section__top">Making People Happy</div>
            <h3 class="ps-section__title ps-section__title--full">Login</h3>
        </div>
        <div class="ps-section__content">
            <div class="ps-contact">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <img src="~/assets/images/blog/login-image.jpg" />
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <div class="ps-contact__form">
                            <form method="post" asp-action="index" asp-controller="login">
                                <div class="form-group">
                                    <label>
                                        User Name<span>*</span>
                                    </label>
                                    <input class="form-control" asp-for="UserName" type="text" placeholder="">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>
                                        Password<span>*</span>
                                    </label>
                                    <input class="form-control" type="password" asp-for="Passwork" placeholder="">
                                    <span asp-validation-for="Passwork" class="text-danger"></span>
                                </div>
                                @{
                                    if (ViewBag.ErrorServerSide == true)
                                    {
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                    }
                                }
                            <div class="form-group text-center mt-30 row">
                                <div class="col-md-4"></div>
                                <div class="col-md-4">
                                    <button type="submit" class="ps-btn ps-btn--sm ps-contact__submit">Login</button>
                                </div>
                                <div class="col-md-4" style="padding: 13px;">
                                    <a asp-controller="User" asp-action="ForgotPassword" style="cursor: pointer;">Forgot Password? </a>
                                </div>
                            </div>
                                
                                <div class="text-center pb-20  pt-20 ">
                                    <span class="txt1">
                                        Or login with
                                    </span>
                                </div>
                                <div class="flex-c">
                                    <a asp-controller="Login" asp-action="FaceBookLogin" asp-route-returnUrl="@returnUrl" class="login100-social-item">
                                        <i class="fa fa-facebook-f"></i>
                                    </a>
                                    <a asp-controller="Login" asp-action="GoogleLogin" asp-route-returnUrl="@returnUrl" class="login100-social-item">
                                        <img src="~/assets/icon-google.png" alt="GOOGLE">
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
    </div>
<partial name="../Shared/_Footer.cshtml">