@model RegisterRequest
@{
    ViewData["Header"] = "header--2";
    ViewData["Image-logo"] = "/assets/images/logo-2.png";
}

@section Header{ 
    <link href="~/assets/css/card.css" rel="stylesheet" />
}
<div class="ps-section--hero" style="height: 175px">
</div>
<div class="ps-section ps-section--order-form pt-80 pb-80">
    <div class="container">
        <div class="ps-section__header text-center mb-50">
            <div class="ps-section__top">Making People Happy</div>
            <h3 class="ps-section__title ps-section__title--full">Register FORM</h3>
        </div>
        <div class="ps-section__content">
            <form asp-action="register" asp-controller="login" method="post" id="registerForm" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            <div class="avatar-upload">
                                <div class="avatar-edit">
                                    <input type='file' id="imageUpload" asp-for="ThumbnailImage" accept=".png, .jpg, .jpeg" />
                                    <label for="imageUpload"></label>
                                </div>
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="background-image: url(/assets/images/no-profile-picture-icon-13.png);">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>User Name<span>*</span></label>
                            <input class="form-control" asp-for="UserName" type="text" placeholder="">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Password<span>*</span></label>
                            <input class="form-control" asp-for="Passwork" type="Password" placeholder="">
                            <span asp-validation-for="Passwork" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <div class="form-group">
                            <label>Your Name <span>*</span></label>
                            <input class="form-control" asp-for="FullName" type="text" placeholder="">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Your Email</label>
                            <input class="form-control" asp-for="Email" type="text" placeholder="">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Number Phone</label>
                            <input class="form-control" asp-for="Phone" type="text" placeholder="">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group form-group--icon">
                            <label>Date Of Birth<span>*</span></label>
                            <input class="form-control " asp-for="Dob" id="dateofbirth" type="date" placeholder="">
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Confirm Password <span>*</span></label>
                            <input class="form-control" type="password" asp-for="ConfirmPasswork" placeholder="">
                            <span asp-validation-for="ConfirmPasswork" class="text-danger"></span>
                        </div>
                    </div>
                    @{
                        if (ViewBag.ErrorServerSide == true)
                        {
                            <div asp-validation-summary="All" class="text-danger"></div>
                        }
                    }
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                        <div class="form-group text-center">
                            <button type="submit" class="ps-btn">Register Now<i class="fa fa-angle-right"></i></button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<partial name="../Shared/_Footer.cshtml">
@section Scripts{
    <script src="~/assets/js/card.js"></script>
}
