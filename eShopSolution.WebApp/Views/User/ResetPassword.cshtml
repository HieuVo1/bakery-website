@model ResetPasswordViewModel
@{
    ViewData["Header"] = "header--2";
    ViewData["Image-logo"] = "/assets/images/logo-2.png";
}
<div class="ps-section--hero" style="height: 175px">
</div>
<div class="ps-section pt-80 pb-80">
    <div class="container">
        <div class="ps-section__header text-center mb-50">
            <div class="ps-section__top">Making People Happy</div>
            <h3 class="ps-section__title ps-section__title--full">RESET</h3>
        </div>
        <div class="ps-section__content">
            <div class="ps-contact">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <img src="~/assets/images/blog/login-image.jpg" />
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <div class="ps-contact__form">
                            <form method="post" asp-action="resetPassword" asp-controller="user">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <input type="hidden" asp-for="Email" value="@ViewBag.Email" />
                                <input type="hidden" asp-for="Token" value="@ViewBag.Token" />
                                <div class="form-group">
                                    <label>
                                        New Pasword<span>*</span>
                                    </label>
                                    <input class="form-control" asp-for="NewPassword" type="password" placeholder="">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>
                                        Confirm Password<span>*</span>
                                    </label>
                                    <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>
                                        Verification Code<span>*</span>
                                    </label>
                                    <input class="form-control" asp-for="VerificationCode" type="text" placeholder="">
                                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                                </div>
                                <div class="form-group text-center mt-30 row">
                                    <button type="submit" class="ps-btn ps-btn--sm ps-contact__submit">Reset</button>
                                    <button type="button" class="ps-btn ps-btn--sm ps-contact__submit send-again">Send Again</button>

                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<partial name="../Shared/_Footer.cshtml">
    @section Scripts{
        <script>
        $(document).ready(function () {
            $('.send-again').click(function () {
                $.get("https://localhost:5002/login/sendmail/@ViewBag.Email",
                    function (data, status) {
                        console.log(data);
                    });
            });
        });
        </script>
    }
