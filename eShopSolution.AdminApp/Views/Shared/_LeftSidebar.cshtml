@using eShopSolution.ViewModel.Catalog.Categories
@{
    var categories = (List<CategoryViewModel>)ViewData["categories"];
}
<aside id="leftsidebar" class="sidebar">
    <div class="navbar-brand">
        <button class="btn-menu ls-toggle-btn" type="button"><i class="zmdi zmdi-menu"></i></button>
        <a href="index.html"><img src="/assets/images/logo.svg" width="25" alt="Aero"><span class="m-l-10">Aero</span></a>
    </div>
    <div class="menu">
        <ul class="list" id="list-menu">
            <li>
                <div class="user-info">
                    <a class="image" href="profile.html"><img src="/assets/images/profile_av.jpg" alt="User"></a>
                    <div class="detail">
                        <h4>@User.Identity.Name</h4>
                        <small>Super Admin</small>
                    </div>
                </div>
            </li>
            <li class="menu-index"><a asp-action="index" asp-controller="home"><i class="zmdi zmdi-home"></i><span>Dashboard</span></a></li>
            <li class="menu-user"><a asp-action="index" asp-controller="user"><i class="zmdi zmdi-account"></i><span>User</span></a></li>
            <li class="menu-category"><a asp-action="index" asp-route-id="vn" asp-controller="category"><i class="zmdi zmdi-assignment"></i><span>Category</span></a></li>
            <li class="menu-language"><a asp-action="index" asp-controller="language"><i class="zmdi zmdi-blogger"></i><span>Language</span></a></li>

            <li class="menu-product">
                <a href="javascript:void(0);" class="menu-toggle"><i class="zmdi zmdi-hc-fw"></i><span>Product</span></a>
                <ul class="ml-menu">
                    @{
                        if (categories != null)
                        {
                            foreach (var category in categories)
                            {
                                <li class="sub-menu-@category.CategoryUrl">
                                    <a href="/product/@category.CategoryUrl"><span>@category.Name</span></a>
                                </li>
                            }
                        }
                    }
                </ul>
            </li>
        </ul>
    </div>
</aside>
